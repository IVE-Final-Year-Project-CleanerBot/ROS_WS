<robot name="simple_robot">
  <!-- 定义 base_link -->
  <link name="base_link"/>

  <!-- 定义 laser 坐标系 -->
  <link name="laser"/>

  <!-- 定义 base_link 和 laser 之间的固定关节 -->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>
</robot>