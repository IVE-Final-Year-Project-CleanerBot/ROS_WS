<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="3" name="NavigateWithRecovery">
      <Sequence name="MainSequence">
        <!-- 主导航任务 -->
        <NavigateToPose goal="{target_pose}"/>
        
        <!-- 持续检测瓶子 -->
        <AlwaysSuccess>
          <ReactiveSequence>
            <CheckForBottles detected="{bottle_detected}"/>
            <SubTree ID="PickUpAction"/>
          </ReactiveSequence>
        </AlwaysSuccess>
      </Sequence>
    </RecoveryNode>

    <SubTree ID="PickUpAction">
      <Sequence>
        <!-- 停止导航 -->
        <StopNavigation/>
        
        <!-- 视觉伺服对准 -->
        <ApproachObject/>
        
        <!-- 执行抓取 -->
        <ControlArm action="pick"/>
        
        <!-- 恢复导航 -->
        <ResumeNavigation/>
      </Sequence>
    </SubTree>
  </BehaviorTree>
</root>