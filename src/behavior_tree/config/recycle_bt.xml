<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- 导航到目标点 -->
      <NavigateToPose goal="{target_pose}"/>

      <!-- 检测瓶子 -->
      <CheckForBottles detected="{bottle_detected}"/>

      <!-- 如果检测到瓶子，执行拾取 -->
      <SubTree ID="PickUpAction"/>
    </Sequence>
  </BehaviorTree>

  <SubTree ID="PickUpAction">
    <Sequence>
      <!-- 停止导航 -->
      <StopNavigation/>

      <!-- 视觉伺服对准 -->
      <ApproachObject/>

      <!-- 执行抓取 -->
      <ControlArm action="pick"/>

      <!-- 恢复导航 -->
      <ResumeNavigation/>
    </Sequence>
  </SubTree>
</root>